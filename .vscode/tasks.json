{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang++ build active file",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=gnu++14",
        "-fcolor-diagnostics",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Generated task to build active C++ file"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang++.exe build active file",
      "command": "C:\\Program Files\\LLVM\\bin\\clang++.exe",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
